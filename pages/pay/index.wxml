<view class="pay">
  <!-- b 有地址 -->
  <view class="allAddress" wx:if="{{address.all}}">
   <view class="address"> {{address.all}}</view>
   <view class="userInfo">{{address.userName}} <text>{{address.telNumber}}</text></view>
  </view>
  <!-- a 如果还没有地址 -->
  <view class="chooseAddress" wx:else>
  <text class="choose" bindtap="getsetting">选择地址</text>
  </view>
  <!-- 已选商品列表 -->
  <view class="ChosenList">
    <view class="chosenGoods">已选商品</view>
    <view class="list" wx:for="{{chosenGoods}}" wx:key="index">
      <image src="{{item.goods_small_logo}}"></image>
      <view class="info">
        <view class="title">{{item.goods_name}}</view>
        <view class="priceAndNum">
          <view class="price"><text>￥</text>{{item.goods_price}}</view>
          <view class="num">x{{item.num}}</view>
        </view>
      </view>
    </view>
  </view>
  <!-- 结算部分 -->
  <view class="pay" >
    <view class="left">
      <view class="total"> 合计：<text><text class="rmb">￥</text>{{totalPrice}}</text>
      </view>
    </view>
    <!-- 点击跳转到支付页面 -->
    <view class="check" wx:if="{{totalNum && address.all}}" bindtap="handlePay">去结算({{totalNum}})</view>
    <view class="check_disable" wx:else>去结算(0)</view>
  </view>
</view>