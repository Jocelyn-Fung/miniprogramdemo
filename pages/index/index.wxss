/**index.wxss**/
.nav{
  background-color:#eb4450;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search{
  text-align: center;
  line-height: 80rpx;
  background-color:#FFFFFF ;
  width:700rpx;
  height:80rpx;
  border-radius: 5px;
  color:#767676 ;
}

/* 轮播图 */
.swiper{
  width:100%;
  background-color:pink;
}
.swiper-item image{
  width:100%;
  height:340rpx;
}
/* 导航 */
.navbar{
  display: flex;
  margin:10rpx 0rpx 15rpx 0rpx;
} 
.navbar-item{
  flex:1;
  text-align: center;
  border-radius: 50%;
} 
.navbar-item image{
  height:140rpx;
  width:128rpx;
}
.navbar-item view{
  font-size: 22rpx;
}
