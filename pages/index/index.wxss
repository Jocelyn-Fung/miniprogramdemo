.title{
  height:59rpx;
  margin:5rpx 0rpx;
}
.pics{
  display: flex;
  height:386rpx;
  margin-left:6px;
  box-sizing: border-box;
}
.left{
  flex:30%;
}
.left image{
  height:100%;
  width:232rpx;
   border:1px solid red;
   border-radius: 3px;
