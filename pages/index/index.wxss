/**index.wxss**/


/* 轮播图 */
.swiper{
  height:340rpx;
}
.swiper-item image{
  width:100%;
  height:100%;
}
navigator{
  height:100%;
}
/* 导航 */
.navbar{
  display: flex;
  margin:10rpx 0rpx 15rpx 0rpx;
} 
.navbar-item{
  flex:1;
  text-align: center;
  border-radius: 50%;
} 
.navbar-item image{
  height:140rpx;
  width:128rpx;
}
/* 主题爆款 */
/* .themes{

} */
.title{
  height:59rpx;
  margin:5rpx 0rpx;
}
.title image{
  height:100%;
  width:100%;
  margin-top: 10rpx;
}
.pics{
  display: flex;
  height:386rpx;
  margin-left:15rpx;
  box-sizing: border-box;
}
.left{
  flex:33%;
  height:100%;
}
.left image{
  height:100%;
  width:98%;
  border-radius: 3px;
}
.right{
  flex:67%;
  display: flex;
  flex-wrap:wrap;
  /* margin-right:7rpx; */
}
.right .nav{
  height:50%;
}
.right image{
  height:188rpx;
  width:233rpx;
  margin: 5rpx;
  border-radius: 3px;
}
.right :nth-child(1),
.right :nth-child(2){
  margin-top: 0rpx;
}
.right :nth-child(3),
.right :nth-child(4){
  margin-bottom: 0rpx;
  margin-top:5rpx;
}